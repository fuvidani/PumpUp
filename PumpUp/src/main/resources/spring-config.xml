<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dbConnector" class="sepm.ss15.grp16.persistence.database.impl.H2DBConnectorImpl"
          scope="singleton" init-method="openConnection" destroy-method="closeConnection">
        <constructor-arg name="path" value="jdbc:h2:tcp://localhost/~/pumpup"></constructor-arg>
        <constructor-arg name="user" value="sa"></constructor-arg>
        <constructor-arg name="password" value=""></constructor-arg>
    </bean>


    <!-- Exercises Beans -->

    <bean id="categoryDAO" class="sepm.ss15.grp16.persistence.dao.impl.H2CategoryDAOImpl">
        <constructor-arg name="handler" ref="dbConnector"></constructor-arg>
    </bean>

    <bean id="categoryService" class="sepm.ss15.grp16.service.impl.CategoryServiceImpl">
        <constructor-arg name="categoryDAO" ref="categoryDAO"/>
    </bean>


    <bean id="exerciseDAO" class="sepm.ss15.grp16.persistence.dao.impl.H2ExerciseDAOImpl"
          scope="singleton">
        <constructor-arg name="handler" ref="dbConnector"></constructor-arg>
        <constructor-arg name="categoryDAO" ref="categoryDAO"></constructor-arg>
        <constructor-arg name="userDAO" ref="userDAO"></constructor-arg>
    </bean>

    <bean id="exerciseService" class="sepm.ss15.grp16.service.impl.ExerciseServiceImpl"
          scope="singleton">
        <constructor-arg name="exerciseDAO" ref="exerciseDAO"/>
        <constructor-arg name="userService" ref="userService"/>
    </bean>

    <bean id="exerciseController" class="sepm.ss15.grp16.gui.controller.Exercises.ExercisesController" scope="singleton">
        <property name="exerciseService" ref="exerciseService"></property>
        <property name="categoryService" ref="categoryService"/>
        <property name="userService" ref="userService"/>
    </bean>

    <bean id="manageExerciseController" class="sepm.ss15.grp16.gui.controller.Exercises.ManageExerciseController" scope="prototype">
        <property name="exerciseController" ref="exerciseController"></property>
        <property name="exerciseService" ref="exerciseService"></property>
        <property name="categoryService" ref="categoryService"/>
        <property name="userService" ref="userService"/>
    </bean>


    <!-- Main Beans -->

    <bean id="mainController" class="sepm.ss15.grp16.gui.controller.Main.MainController" scope="prototype">
        <property name="userService" ref="userService" />
        <property name="weightHistoryService" ref="weightHistoryService" />
        <property name="bodyfatHistoryService" ref="bodyfatHistoryService" />
        <property name="pictureHistoryService" ref="pictureHistoryService" />
    </bean>

    <bean id="userDataController" class="sepm.ss15.grp16.gui.controller.Main.Main_UserDataController" scope="prototype">

    </bean>

    <bean id="userChartController" class="sepm.ss15.grp16.gui.controller.Main.Main_UserChartController"
          scope="prototype">
    </bean>

    <bean id="main_calendarController" class="sepm.ss15.grp16.gui.controller.Main.Main_CalendarController"
          scope="prototype">
    </bean>

    <bean id="bodyPhotosController" class="sepm.ss15.grp16.gui.controller.Main.BodyPhotosController" scope="prototype">

    </bean>


    <!-- Calendar Beans -->

    <bean id="calendarController" class="sepm.ss15.grp16.gui.controller.Calendar.CalendarController" scope="prototype">

    </bean>


    <!-- User Beans-->

    <bean id="userDAO" class="sepm.ss15.grp16.persistence.dao.impl.H2UserDAOImpl"
          scope="singleton">
        <constructor-arg name="handler" ref="dbConnector"></constructor-arg>
    </bean>

    <bean id="userService" class="sepm.ss15.grp16.service.impl.UserServiceImpl"
          scope="singleton">
        <constructor-arg name="userDAO" ref="userDAO" />
    </bean>

    <bean id="loginController" class="sepm.ss15.grp16.gui.controller.User.LoginController" scope="prototype">
        <property name="userService" ref="userService" />
    </bean>

    <bean id="weightHistoryDAO" class="sepm.ss15.grp16.persistence.dao.impl.H2WeightHistoryDAOImpl"
          scope="singleton">
        <constructor-arg name="handler" ref="dbConnector"></constructor-arg>
    </bean>

    <bean id="weightHistoryService" class="sepm.ss15.grp16.service.impl.WeightHistoryServiceImpl"
          scope="singleton">
        <constructor-arg name="weightHistoryDAO" ref="weightHistoryDAO" />
    </bean>

    <bean id="bodyfatHistoryDAO" class="sepm.ss15.grp16.persistence.dao.impl.H2BodyfatHistoryDAOImpl"
          scope="singleton">
        <constructor-arg name="handler" ref="dbConnector"></constructor-arg>
    </bean>

    <bean id="bodyfatHistoryService" class="sepm.ss15.grp16.service.impl.BodyfatHistoryServiceImpl"
          scope="singleton">
        <constructor-arg name="bodyfatHistoryDAO" ref="bodyfatHistoryDAO" />
    </bean>

    <bean id="pictureHistoryDAO" class="sepm.ss15.grp16.persistence.dao.impl.H2PictureHistoryDAOImpl"
          scope="singleton">
        <constructor-arg name="handler" ref="dbConnector"></constructor-arg>
    </bean>

    <bean id="pictureHistoryService" class="sepm.ss15.grp16.service.impl.PictureHistoryServiceImpl"
          scope="singleton">
        <constructor-arg name="pictureHistoryDAO" ref="pictureHistoryDAO" />
    </bean>

    <bean id="registrationController" class="sepm.ss15.grp16.gui.controller.User.RegistrationController"
          scope="prototype">
        <property name="userService" ref="userService" />
        <property name="weightHistoryService" ref="weightHistoryService" />
        <property name="bodyfatHistoryService" ref="bodyfatHistoryService" />
        <property name="pictureHistoryService" ref="pictureHistoryService" />
    </bean>

    <bean id="userEditController" class="sepm.ss15.grp16.gui.controller.User.UserEditController"
          scope="prototype">
        <property name="userService" ref="userService" />
        <property name="weightHistoryService" ref="weightHistoryService" />
        <property name="bodyfatHistoryService" ref="bodyfatHistoryService" />
    </bean>

    <bean id="trainingsplanDAO" class="sepm.ss15.grp16.persistence.dao.training.impl.H2TrainingsplanDAOImpl" scope="singleton" lazy-init="true">
        <constructor-arg name="handler" ref="dbConnector"/>
        <property name="trainingsSessionHelperDAO" ref="trainingsSessionHelperDAO"/>
        <property name="exerciseSetHelperDAO" ref="exerciseSetHelperDAO"/>
        <property name="userDAO" ref="userDAO"/>
    </bean>

    <bean id="trainingsSessionDAO" class="sepm.ss15.grp16.persistence.dao.training.impl.H2TrainingssessionDAOImpl" scope="singleton" lazy-init="true">
        <property name="trainingsSessionHelperDAO" ref="trainingsSessionHelperDAO"/>
    </bean>

    <bean id="trainingsSessionHelperDAO" class="sepm.ss15.grp16.persistence.dao.training.helper.impl.H2TrainingssessionHelperDAOImpl" scope="singleton" lazy-init="true">
        <constructor-arg name="handler" ref="dbConnector"/>
        <property name="exerciseSetHelperDAO" ref="exerciseSetHelperDAO"/>
        <property name="trainingsplanDAO" ref="trainingsplanDAO"/>
        <property name="userDAO" ref="userDAO"/>
    </bean>

    <bean id="exerciseSetHelperDAO" class="sepm.ss15.grp16.persistence.dao.training.helper.impl.H2ExerciseSetHelperDAOImpl" scope="singleton" lazy-init="true">
        <constructor-arg name="handler" ref="dbConnector"/>
        <property name="exerciseDAO" ref="exerciseDAO"/>
        <property name="trainingsSessionHelperDAO" ref="trainingsSessionHelperDAO"/>
        <property name="userDAO" ref="userDAO"/>
    </bean>

    <bean id="trainingsplanService" class="sepm.ss15.grp16.service.training.impl.TrainingsPlanServiceImpl">
        <constructor-arg name="trainingsplanDAO" ref="trainingsplanDAO"/>
        <constructor-arg name="trainingsSessionDAO" ref="trainingsSessionDAO"/>
        <constructor-arg name="exerciseService" ref="exerciseService"/>
        <constructor-arg name="userService" ref="userService"/>
    </bean>


    <!-- Workout Beans-->

    <bean id="workoutstartController" class="sepm.ss15.grp16.gui.controller.Workout.WorkoutstartController" scope="prototype">

    </bean>

    <bean id="playlistController" class="sepm.ss15.grp16.gui.controller.Workout.PlaylistController" scope="prototype">

    </bean>

    <bean id="workoutController" class="sepm.ss15.grp16.gui.controller.Workout.WorkoutController" scope="prototype">

    </bean>

    <bean id="workoutGraphicsController" class="sepm.ss15.grp16.gui.controller.Workout.WorkoutGraphicsController" scope="prototype">

    </bean>

    <bean id="workoutMusicPlayerController" class="sepm.ss15.grp16.gui.controller.Workout.WorkoutMusicPlayerController" scope="prototype">

    </bean>

    <bean id="workoutResultController" class="sepm.ss15.grp16.gui.controller.Workout.WorkoutResultController" scope="prototype">

    </bean>



    <!-- WorkoutPlans Beans-->

    <bean id="create_edit_WorkoutController" class="sepm.ss15.grp16.gui.controller.WorkoutPlans.Create_Edit_WorkoutPlanController" scope="prototype">

    </bean>

    <bean id="generateWorkoutPlanController" class="sepm.ss15.grp16.gui.controller.WorkoutPlans.GenerateWorkoutPlanController" scope="prototype">

    </bean>

    <bean id="WorkoutPlansController" class="sepm.ss15.grp16.gui.controller.WorkoutPlans.WorkoutPlansController" scope="prototype">

    </bean>

    <bean id="WorkoutPlanToCalendarController" class="sepm.ss15.grp16.gui.controller.WorkoutPlans.WorkoutPlanToCalendarController" scope="prototype">

    </bean>


</beans>