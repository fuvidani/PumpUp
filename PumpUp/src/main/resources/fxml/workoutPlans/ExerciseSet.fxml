<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8"
      fx:controller="sepm.ss15.grp16.gui.controller.workoutPlans.SetController">
    <children>
        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Übung wählen">
            <font>
                <Font size="18.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </VBox.margin>
        </Label>
        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <children>
                <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Suchen nach:">
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </HBox.margin>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtFilter" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                           promptText="Liegestütz">
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </HBox.margin>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextField>
            </children>
            <VBox.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </VBox.margin>
        </HBox>
        <TableView fx:id="tblvExercises" editable="true" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308">
            <columns>
                <TableColumn fx:id="tblcName" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="220.0"
                             text="Name"/>
                <TableColumn fx:id="tblcCat" minWidth="0.0" prefWidth="160.0" text="Kategorie"/>
                <TableColumn fx:id="tblcCalo" text="Calorien"/>
            </columns>
            <VBox.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </VBox.margin>
        </TableView>
        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <VBox.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </VBox.margin>
            <children>
                <TextField fx:id="txtRepeat" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                           prefWidth="50.0" promptText="10">
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </HBox.margin>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextField>
                <RadioButton fx:id="rdMinutes" mnemonicParsing="false" selected="true" text="Wiederholungen">
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="10.0"/>
                    </HBox.margin>
                    <toggleGroup>
                        <ToggleGroup fx:id="tglGrType"/>
                    </toggleGroup>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </RadioButton>
                <RadioButton fx:id="rdRepeats" mnemonicParsing="false" text="Minuten" toggleGroup="$tglGrType">
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="10.0"/>
                    </HBox.margin>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </RadioButton>
            </children>
        </HBox>
        <HBox alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <children>
                <Button fx:id="btnShow" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                        mnemonicParsing="false" onAction="#onClickShow" text="Ansehen">
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </HBox.margin>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
                <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#onClickSave" text="Speichern">
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </HBox.margin>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
                <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#onClickCancle" text="Abbrechen">
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </HBox.margin>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
            </children>
            <VBox.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
    </padding>
</VBox>
