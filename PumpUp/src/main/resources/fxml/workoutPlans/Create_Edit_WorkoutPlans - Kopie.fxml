<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0"
            prefWidth="1300.0" xmlns="http://javafx.com/javafx/8"
            fx:controller="sepm.ss15.grp16.gui.controller.workoutPlans.Create_Edit_WorkoutPlanController">
    <bottom>
        <HBox alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              BorderPane.alignment="CENTER">
            <children>
                <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#saveWorkoutClicked" text="Speichern">
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </HBox.margin>
                </Button>
                <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#cancelClicked" text="Abbrechen">
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </HBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </BorderPane.margin>
        </HBox>
    </bottom>
    <center>
        <SplitPane dividerPositions="0.5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   orientation="VERTICAL" BorderPane.alignment="CENTER">
            <items>
                <GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Name">
                            <GridPane.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </GridPane.margin>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="txtName" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                   GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets left="10.0" right="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <TextArea fx:id="txtDescr" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                  GridPane.columnSpan="4" GridPane.rowIndex="5" GridPane.rowSpan="2">
                            <GridPane.margin>
                                <Insets left="10.0" right="10.0"/>
                            </GridPane.margin>
                        </TextArea>
                        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Beschreibung"
                               GridPane.rowIndex="4">
                            <GridPane.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </GridPane.margin>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                              GridPane.rowIndex="3">
                            <children>
                                <TextField fx:id="txtDuration" maxHeight="1.7976931348623157E308"
                                           maxWidth="1.7976931348623157E308">
                                    <HBox.margin>
                                        <Insets left="10.0" right="10.0"/>
                                    </HBox.margin>
                                </TextField>
                                <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                       text="Wiederholungen">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Dauer"
                               GridPane.rowIndex="2">
                            <font>
                                <Font size="18.0"/>
                            </font>
                            <GridPane.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </GridPane.margin>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </GridPane>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <children>
                        <Label text="Sessions">
                            <VBox.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </VBox.margin>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                            <children>
                                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                      HBox.hgrow="ALWAYS">
                                    <children>
                                        <ListView fx:id="listViewSessions" maxHeight="1.7976931348623157E308"
                                                  maxWidth="1.7976931348623157E308" orientation="HORIZONTAL"
                                                  prefHeight="200.0">
                                            <HBox.margin>
                                                <Insets left="10.0" top="10.0"/>
                                            </HBox.margin>
                                        </ListView>
                                    </children>
                                </VBox>
                                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                                    <children>
                                        <Button fx:id="btnAddSession" maxHeight="1.7976931348623157E308"
                                                maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                                onAction="#addSession" text="Session hinzufügen">
                                            <VBox.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                                            </VBox.margin>
                                        </Button>
                                        <Button fx:id="btnEditSession" disable="true" maxHeight="1.7976931348623157E308"
                                                maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                                onAction="#editSession" text="Session bearbeiten">
                                            <VBox.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                                            </VBox.margin>
                                        </Button>
                                        <Button fx:id="btnDeleteSession" disable="true"
                                                maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                                mnemonicParsing="false" onAction="#deleteSession"
                                                text="Session löschen">
                                            <VBox.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                                            </VBox.margin>
                                        </Button>
                                    </children>
                                    <padding>
                                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                                    </padding>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </VBox>
            </items>
        </SplitPane>
    </center>
    <top>
        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="lblTitel" text="Trainingsplan">
                    <font>
                        <Font size="30.0"/>
                    </font>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </BorderPane.margin>
        </HBox>
    </top>
</BorderPane>
